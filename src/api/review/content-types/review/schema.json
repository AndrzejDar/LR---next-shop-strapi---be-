{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "verified": {
      "type": "boolean"
    },
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "media": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "rating": {
      "type": "integer",
      "default": 5,
      "required": true,
      "max": 5,
      "min": 1
    }
  }
}
